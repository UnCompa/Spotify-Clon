---
import type { Playlist } from "./../data/data";
interface Props {
  playlist: Playlist;
}
const { playlist } = Astro.props;
const { id, cover, artists, title } = playlist;
---

<a
  href={`/playlist/${id}`}
  class="flex w-full border-l-2 border-green-500 py-2 bg-zinc-900 px-4 gap-4 relative rounded overflow-y-auto hover:bg-zinc-700 transition-all duration-200"
>
  <picture class="h-12 w-12 flex-none">
    <img
      src={cover}
      alt={`Por ${artists}`}
      class="w-full h-full object-cover rounded"
      loading="lazy"
    />
  </picture>
  <div>
    <h4 class="text-zinc-200 text-sm">
      {title}
    </h4>
    <span class="text-xs">
      {artists}
    </span>
  </div>
</a>
